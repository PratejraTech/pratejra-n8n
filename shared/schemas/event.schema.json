{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://automation-hub.example.com/schemas/v1/event.schema.json",
  "title": "Internal Event Schema v1",
  "description": "Schema for internal automation events used across the Automation Hub platform",
  "type": "object",
  "required": ["id", "type", "source", "env", "timestamp", "payload"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique event identifier (UUID format recommended)",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
    },
    "type": {
      "type": "string",
      "description": "Event type identifier (e.g., 'contact.created', 'infra.deploy.started')",
      "pattern": "^[a-z0-9]+(\\.[a-z0-9]+)+$"
    },
    "source": {
      "type": "string",
      "description": "Source system that generated the event",
      "enum": ["n8n", "backend", "frontend", "infra", "github", "external"]
    },
    "env": {
      "type": "string",
      "description": "Environment where event originated",
      "enum": ["dev", "staging", "prod"]
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp when event occurred",
      "format": "date-time"
    },
    "correlation_id": {
      "type": ["string", "null"],
      "description": "Correlation ID for tracing related events across workflows"
    },
    "payload": {
      "type": "object",
      "description": "Event-specific payload data",
      "additionalProperties": true
    },
    "meta": {
      "type": "object",
      "description": "Additional metadata about the event",
      "properties": {
        "raw": {
          "type": "object",
          "description": "Original raw event data before transformation",
          "additionalProperties": true
        },
        "tags": {
          "type": "array",
          "description": "Tags for categorizing and filtering events",
          "items": {
            "type": "string"
          }
        },
        "version": {
          "type": "string",
          "description": "Event schema version",
          "default": "v1"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
